<?xml version="1.0"?>
<block>
  <name>Time Interleaver</name>
  <key>isdbt_time_interleaver</key>
  <category>[ISDBT]</category>
  <import>import isdbt</import>
  <make>isdbt.time_interleaver($mode, $segments_A, $length_A, $segments_B, $length_B, $segments_C, $length_C)</make>

  <param>
      <name>Transmission Mode</name>
	  <key>mode</key>
	  <value>3</value>
	  <type>enum</type>
      <option>
	    <name>MODE1(2K)</name>
	    <key>1</key>
      </option>
	  <option>
	    <name>MODE2(4K)</name>
	    <key>2</key>
	  </option>
	  <option>
	    <name>MODE3(8K)</name>
	    <key>3</key>
	  </option>
  </param>

  <param>
    <name>Layer A Segments</name>
    <key>segments_A</key>
    <type>int</type>
  </param>
  <param>
    <name>Layer A Length</name>
    <key>length_A</key>
    <type>int</type>
  </param>
  
  <param>
    <name>Layer B Segments</name>
    <key>segments_B</key>
    <type>int</type>
  </param>
  <param>
    <name>Layer B Length</name>
    <key>length_B</key>
    <type>int</type>
</param>

  <param>
    <name>Layer C Segments</name>
    <key>segments_C</key>
    <type>int</type>
  </param>
  <param>
    <name>Layer C Length</name>
    <key>length_C</key>
    <type>int</type>
</param>
<check>$segments_A + $segments_B + $segments_C == 13</check>
<check>$segments_A &gt; -1</check>
<check>$segments_B &gt; -1</check>
<check>$segments_C &gt; -1</check>

  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>13*96*(2**($mode-1))</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>13*96*(2**($mode-1))</vlen>
  </source>

</block>
